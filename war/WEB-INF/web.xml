<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="gwt-testing-system" >
    <display-name>GWTTestingSystem</display-name>


    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>GWTEntryPoint.html</welcome-file>
    </welcome-file-list>

    <!-- Servlets -->
    <servlet>
        <servlet-name>TestService</servlet-name>
        <servlet-class>ru.ifmo.qd.testing.server.TestServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserService</servlet-name>
        <servlet-class>ru.ifmo.qd.testing.server.UserServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministrationService</servlet-name>
        <servlet-class>ru.ifmo.qd.testing.server.AdministrationServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>ru.ifmo.qd.testing.server.LoginServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadService</servlet-name>
        <servlet-class>ru.ifmo.qd.testing.server.DownloadService</servlet-class>
    </servlet>
    <servlet-mapping>        
        <servlet-name>TestService</servlet-name>
        <url-pattern>/testing/TestService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserService</servlet-name>
        <url-pattern>/testing/UserService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministrationService</servlet-name>
        <url-pattern>/testing/AdministrationService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/testing/LoginService</url-pattern>
    </servlet-mapping>
   <servlet-mapping>
       <servlet-name>DownloadService</servlet-name>
       <url-pattern>/testing/download</url-pattern>
   </servlet-mapping>


</web-app>
